<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
    <%= stylesheet_link_tag    "application", "http://fonts.googleapis.com/css?family=Alegreya+SC:400,700italic" %>
     <%= stylesheet_link_tag    "application", "http://fonts.googleapis.com/css?family=Lato:400,400italic,700" %>
     <%= stylesheet_link_tag    "application", "http://fonts.googleapis.com/css?family=Alegreya:400,700" %>

  <%= javascript_include_tag "application"%>

  <link href="//vjs.zencdn.net/4.9/video-js.css" rel="stylesheet">
<script src="//vjs.zencdn.net/4.9/video.js"></script>
  <%= csrf_meta_tags %>
  <style>
    .video-js {padding-top: 56.25%}
    .vjs-fullscreen {padding-top: 0px}
  </style>
</head>
<body>
<!-- <div id='wrap'> -->
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     
      <%= link_to " Flixter", root_path, :class => 'navbar-brand' %>
       
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
       <ul class="nav navbar-nav">
            <li>
<%= link_to 'See All Courses', courses_path %>
            </li>
          </ul>
      <ul class="nav navbar-nav navbar-right">
<!-- <span class='glyphicon glyphicon-plus-sign'></span> -->

 <% if user_signed_in? %>
  <li><%= link_to 'my dashboard', dashboard_path %></li>
  <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
        <% else %>
        <li><%= link_to 'sign-in', new_user_session_path %></li>   
        <li><%= link_to 'sign-up', new_user_registration_path %></li>
       
  <% end %>

        
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- <span class="notice"><%= notice %></span> -->

<% if alert.present? %>
<span class="alert"><%= alert %></span>
<%end%>
<%= yield %>

<!-- </div> --> <!-- end wrap  don't need it see BS example of sticky footert-->
  <div id="footer">
    <div class="container">
      <div calss='row'>       
        <div class='col-xs-12 col-sm-3'>   
          <h4 class="text-center">Teachers</h4>
          <p class="text-center">
         <%= link_to 'Teach A Course', new_instructor_course_path %>
                <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </p>
       </div>
       <div class='col-xs-12 col-sm-3'>   
          <h4 class="text-center">About</h4>
          <p class="text-center">
            <%= link_to 'Team', '#' %>
            <br />
            <%= link_to 'Careers', '#' %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
          </p>
       </div>
       <div class='col-xs-12 col-sm-3'>   
          <h4 class="text-center">Contact</h4>
      <p class="text-center">
        <%= image_tag 'icons-sm-email.png' %>
      </p>
       </div>
       <div class='col-xs-12 col-sm-3'>   
          <h4 class="text-center">Social</h4>
      <p class="text-center">
        <%= image_tag 'icons-sm-github.png' %>

        <%= image_tag 'icons-sm-fb.png' %>

        <%= image_tag 'icons-sm-twitter.png' %>
        </p>
       </div>
     </div>
    </div>
  </div>

</body>
</html>
