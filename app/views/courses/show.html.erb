<div class="form-box">
      <h2><%= @course.title %></h2>

<div class = 'row'>  
  <div class="col-sm-2 col-xs-12 text-center ">

    <span class='label label-default'><%= number_to_currency @course.cost %></span>
   <p><br> <br><% if current_user && current_user == @course.user %>
   
         <%= link_to 'Teacher Admin', instructor_course_path(@course), :class => 'btn btn-danger btn-large' %>
       <% end %></p>
    
  </div>


  <div class="col-sm-10col-xs-12">
    <%= @course.description %>
     <%= image_tag @course.image, :class=> 'img-responsive' %>

         <% @course.sections.each do |section| %>
      <div class="section">
        <h3><%= section.title %>:  </h3> 
                <% section.lessons.each do |lesson| %>
          <div class="lesson">
              <%= link_to lesson_path(lesson) do %>
            <h4><%= lesson.title %>: </h4>
            <em> <%= lesson.subtitle %></em>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



  
</div>