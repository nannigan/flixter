<div class ='form-box'>
	<div class="text-center">
<h3><%= @course.title%></h3>	
 
    <p><%= link_to 'Add a new section...', new_instructor_course_section_path(@course), :class => 'btn' %></p>
   <p> <%= link_to 'Preview As Student...', course_path(@course), :class => 'btn' %></p>

   <ul class='list-unstyled'> <% @course.sections.each do |section| %> 
		   	<li > 
		   	<%= section.title %> 
		   	<%= link_to ' Add New Lesson', new_instructor_section_lesson_path(section) %>
		   	 <ul class='list-unstyled'>
          <% section.lessons.each do |lesson| %>
            <li>
              <h4><%= lesson.title %></h4>
            
              <em><%= lesson.subtitle %></em>
            </li>
          <% end %>
        </ul>
		   </li> 
   	<% end %> 
   </ul>
  </div>


</div> 